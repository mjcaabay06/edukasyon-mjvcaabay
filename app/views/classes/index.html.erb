<div class="col-md-12">
	<div class="row">
		<div class="page-header">
			<h3 class="pull-left">Classes</h3>
			<form class="pull-right form-inline" role="form" method="get" action="">
				<div class="form-group">
					<input type="text" class="form-control" placeholder="Search Class" name="query" value="<%= params[:query] unless params[:query].blank? %>">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary" value="Search">
						<i class="glyphicon glyphicon-search"></i>
					</button>
				</div>
			</form>
			<div class="clearfix"></div>
		</div>
	</div>
</div>
<div class="col-md-12">
	<div class="row">
		<% @subjects.reorder(:subject_name).each do |subject| %>
			<div class="col-xs-3">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title pull-left"><%= subject.subject_name %></h3>
						<a href="class/<%= subject.sid %>" class="pull-right">
							<i class="glyphicon glyphicon-chevron-right"></i>
						</a>
						<div class="clearfix"></div>
					</div>
					<div class="panel-body">
						Professors: <%= SubjectProfessor.where(subject_id: subject.id).count %>
					</div>
					<div class="panel-footer"></div>
				</div>
			</div>
		<% end %>
	</div>
	<div class="row">
		<div class="digg_pagination text-center">
			<%= will_paginate @subjects %>
		</div>
	</div>
</div>